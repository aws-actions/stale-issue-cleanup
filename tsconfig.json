{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "outDir": "./lib",
  },
  "exclude": [
    "lib"
  ],
  "include": [
    "./src/**.ts",
    "./test/**.ts",
    "./test/**.d.ts"
  ]
}
